{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 countries with highest number of vaccinations",
  "description": "A simple bar chart with embedded data.",
  "width": 400,
  "height": {"step": 50},
  "data": {
    "url": "https://raw.githubusercontent.com/shariqmalik10/shariqmalik10.github.io/master/data/top10_maxvac.csv"
  },
  "layer":[
    
    {
      "params": [{
        "name": "Select",
        "select": {"type": "point", "fields": ["Continent"]},
        "bind": {"input": "select", "options": [null, "Europe", "Asia", "North America", "South America", "Oceania"]}
      }],
      "mark": {
        "type":"bar",
        "yOffset":5,
        "cornerRadiusEnd": 2,
        "height": {"band": 0.5}
      },
      "encoding": {
      "y": {
        "field": "country",
        "scale": {"padding": 0},
        "axis": {
          "bandPosition": 0,
          "grid": true,
          "domain": false,
          "ticks": false,
          "labelAlign": "left",
          "labelBaseline": "middle",
          "labelPadding": -5,
          "labelOffset": -15,
          "titleX": 5,
          "titleY": -5,
          "titleAngle": 0,
          "titleAlign": "left"
        },
        "sort": {"op": "mean", "field":"total_vaccinations", "order":"descending"}
      },
      "x": {"field": "total_vaccinations", "type": "quantitative", "title": "vaccinations", "axis":{"grid": false}},
      "color":{
        "condition": {
          "param": "Select",
          "field": "Continent", "type": "nominal" 
        },
        "value": "grey"
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "total_vaccinations", "type": "quantitative", "title": "Total Vaccinations"}
      ]
      }
    },
    {
      "mark":{
        "type": "text",
        "align": "right",
        "baseline":"middle",
        "fontSize": 11.5,
        "dx": 155,
        "dy": -197,
        "fontStyle": "italic"
      },
      "transform":[
        {
          "calculate": "datum['country'] + ';' + datum['total_vaccinations']",
          "as": "annotate"
        },
        {"calculate": "split(datum.annotate, ';')", "as": "vacnum"}
      ],
      "encoding": {
        "text": {"field": "vacnum"},
        "color": {"value": "orange"},
        "opacity": {
          "condition":{
            "test": "datum['country'] == 'China'",
            "value":1
          },
          "value":0
        }
      }
    }

  ]
 
}